<% content_for(:title, t('.title')) %>
<div class="max-w-3xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6"><%= t('.title') %></h1>

  <%= form_with url: login_path do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 mb-1" %>
      <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class: "block text-gray-700 mb-1" %>
      <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <%= f.submit t('.login'), class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition" %>
  <% end %>

  <div class="text-center mt-6 space-x-4">
    <%= link_to t('.to_register_page'), new_user_path, class: "text-blue-600 hover:underline" %>
    <%= link_to t('.password_forget'), '#', class: "text-blue-600 hover:underline" %>
  </div>
</div>
