<header class="bg-white shadow">
  <nav class="container mx-auto flex items-center justify-between px-4 py-3">
    <%= link_to root_path, class: 'flex flex-col items-center justify-center text-center' do %>
        <span class="text-xl font-bold text-gray-800">わんスマイル</span>
        <span class="text-sm text-gray-500">ONE SMILE</span>
    <% end %>

    <!-- ハンバーガーメニュー（モバイル用） -->
    <button class="md:hidden text-gray-500 focus:outline-none" @click="open = !open" aria-label="Toggle menu">
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>

    <!-- メニュー（PC用） -->
    <div class="hidden md:flex justify-end items-center space-x-6" id="navbarSupportedContent">
      <ul class="flex items-center space-x-6">
        <!-- Board Dropdown -->
        <li class="relative group">
          <%= link_to t('header.board'), '#', class: 'text-gray-700 hover:text-blue-600 focus:outline-none', id: 'header-board-menu' %>
          <div class="absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded shadow-lg opacity-0 group-hover:opacity-100 transition duration-200 invisible group-hover:visible z-50">
            <%= link_to t('header.board_index'), '#', class: 'block px-4 py-2 text-gray-700 hover:bg-gray-100' %>
            <%= link_to t('header.create_board'), '#', class: 'block px-4 py-2 text-gray-700 hover:bg-gray-100' %>
          </div>
        </li>

        <li>
          <%= link_to t('header.bookmark_index'), '#', class: 'text-gray-700 hover:text-blue-600' %>
        </li>

        <!-- Profile  -->
        <li class="relative group">
          <%= link_to '#', class: 'flex items-center focus:outline-none', id: 'header-profile' do %>
            <%= image_tag 'わんスマイル.png', class: 'rounded-full w-10 h-10 mr-2' %>
          <% end %>
          <div class="absolute right-0 mt-2 w-56 bg-white border border-gray-200 rounded shadow-lg opacity-0 group-hover:opacity-100 transition duration-200 invisible group-hover:visible z-50">
            <div class="px-4 py-2 text-gray-900">ユーザーネーム</div>
            <div class="border-t border-gray-100 my-1"></div>
            <%= link_to t('header.profile'), '#', class: 'block px-4 py-2 text-gray-700 hover:bg-gray-100' %>
            <%= link_to t('header.logout'), logout_path, class: 'block px-4 py-2 text-gray-700 hover:bg-gray-100', data: { turbo_method: :delete } %>
          </div>
        </li>

      </ul>
    </div>
  </nav>
</header>
