<header class="bg-white shadow">
  <nav class="container mx-auto flex items-center justify-between px-4 py-3">
    <%= link_to root_path, class: 'flex flex-col items-center justify-center text-center' do %>
        <span class="text-xl font-bold text-gray-800">わんスマイル</span>
        <span class="text-sm text-gray-500">ONE SMILE</span>
    <% end %>

    <!-- ハンバーガーメニュー（モバイル用） -->
    <button class="md:hidden text-gray-500 focus:outline-none" @click="open = !open" aria-label="Toggle menu">
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>

    <!-- メニュー（PC用） -->
    <div class="hidden md:flex space-x-6 items-center">
        <%= link_to '掲示板作成', '#', class: 'text-gray-700 hover:text-blue-600 font-medium' %>

      <div class="relative group">
        <%= link_to '#', class: 'nav-link', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-profile' do %>
            <%= image_tag 'わんスマイル.png', class: 'rounded-circle mr15', width: '40', height: '40' %>
        <% end %>
        <div class="absolute hidden group-hover:block bg-white shadow-md rounded mt-2 w-48 right-0 z-10">
          <div class="px-4 py-2 text-sm text-gray-800">ユーザーネーム</div>
          <hr class="border-gray-200">
          <%= link_to 'プロフィール', '#', class: 'block px-4 py-2 hover:bg-gray-100 text-sm text-gray-700' %>
          <%= link_to 'ログアウト', logout_path, class: 'dropdown-item', data: { turbo_method: :delete } %>        </div>
      </div>
    </div>
  </nav>
</header>
