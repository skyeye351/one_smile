<header class="bg-white shadow">
  <nav class="container mx-auto px-4 py-3 flex items-center justify-between flex-wrap">

    <div class="flex items-center flex-shrink-0">
    <%= link_to root_path, class: 'flex flex-col items-center justify-center text-center' do %>
        <span class="text-xl font-bold text-gray-800">わんスマイル</span>
        <span class="text-sm text-gray-500">ONE SMILE</span>
    <% end %>
    </div>

    <!-- ハンバーガーボタン -->
    <div class="block lg:hidden">
      <button id="nav-toggle" class="flex items-center px-3 py-2 border rounded text-gray-600 border-gray-400 hover:text-gray-800 hover:border-gray-600">
        <svg class="fill-current h-4 w-4" viewBox="0 0 20 20">
          <path d="M0 3h20v2H0zM0 9h20v2H0zM0 15h20v2H0z" />
        </svg>
      </button>
    </div>

    <!-- メニュー項目 -->
    <div id="nav-menu" class="w-full lg:flex lg:items-center lg:w-auto hidden">
      <ul class="lg:flex lg:justify-end text-sm lg:space-x-4 mt-4 lg:mt-0">
        <li>
          <%= link_to t("header.login"), login_path, class: "block px-4 py-2 text-gray-700 hover:text-blue-500" %>
        </li>
      </ul>
    </div>

  </nav>
</header>
