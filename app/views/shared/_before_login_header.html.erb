    <!-- メニュー（PC用） -->
    <div id="nav-menu" class="hidden md:flex flex-col md:flex-row absolute md:static top-16 right-4 md:top-auto md:right-auto bg-white md:bg-transparent shadow md:shadow-none rounded md:rounded-none p-4 md:p-0 space-y-4 md:space-y-0 md:space-x-6 z-50">
      <ul class="lg:flex lg:justify-end text-sm lg:space-x-4 mt-4 lg:mt-0">
        <li>
          <%= link_to t("header.login"), login_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" %>
        </li>
      </ul>
    </div>
  </nav>
</header>
