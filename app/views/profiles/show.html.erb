<div class="min-h-screen bg-gradient-to-br from-indigo-50 to-blue-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto bg-white rounded-2xl shadow-xl p-8 animate-fade-in-up">
    
    <!-- タイトル & 編集ボタン -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
      <h1 class="text-2xl font-bold text-gray-800 mb-4 md:mb-0"><%= t(".title") %></h1>
      <%= link_to t("defaults.edit"), edit_profile_path, class: "inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg transition-all duration-300" %>
    </div>

    <!-- プロフィール情報 -->
    <div class="overflow-x-auto">
      <table class="min-w-full text-sm text-gray-700">
        <tbody>
          <tr class="border-b border-gray-200">
            <th class="text-left py-4 pr-6 font-medium text-gray-600 whitespace-nowrap flex items-center">
              <i class="bi bi-envelope-fill mr-2 text-blue-500"></i>
              <%= User.human_attribute_name(:email) %>
            </th>
            <td class="py-4"><%= current_user.email %></td>
          </tr>
          <tr class="border-b border-gray-200">
            <th class="text-left py-4 pr-6 font-medium text-gray-600 whitespace-nowrap flex items-center">
              <i class="bi bi-person-fill mr-2 text-blue-500"></i>
              <%= User.human_attribute_name(:full_name) %>
            </th>
            <td class="py-4"><%= current_user.decorate.full_name %></td>
          </tr>
          <tr>
            <th class="text-left py-4 pr-6 font-medium text-gray-600 whitespace-nowrap flex items-center">
              <i class="bi bi-image-fill mr-2 text-blue-500"></i>
              <%= User.human_attribute_name(:avatar) %>
            </th>
            <td class="py-4">
              <%= image_tag current_user.avatar_url, class: "rounded-full shadow w-16 h-16" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    
  </div>
</div>
