<% content_for(:title, t('.title')) %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-blue-100 flex items-center justify-center px-4 py-12">
  <div class="bg-white shadow-2xl rounded-2xl p-8 max-w-2xl w-full animate-fade-in-up">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-8 text-center"> <%= t('.title') %> </h1>
    <!-- フォーム -->
    <%= form_with model: @user, url: profile_path, method: :put, html: { multipart: true }, class: "space-y-6" do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <!-- メール -->
      <div>
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, class: "w-full border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-400 focus:border-transparent p-3" %>
      </div>

      <!-- 姓 -->
      <div>
      <%= f.label :last_name, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :last_name, class: "pl-5 py-2 w-full border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- 名 -->
      <div>
      <%= f.label :first_name, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :first_name, class: "pl-5 py-2 w-full border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- アバター画像 -->
      <div>
      <%= f.label :avatar, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.file_field :avatar, accept: 'image/*', class: "block w-full text-sm text-gray-700 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-blue-600 file:text-white hover:file:bg-blue-700" %>
      </div>

      <!-- プレビュー表示 -->
      <% if @user.avatar.attached? %>
        <div>
          <%= image_tag url_for(@user.avatar), id: 'preview', class: 'rounded-full w-24 h-24 object-cover mx-auto shadow' %>
        </div>
      <% end %>

      <!-- 更新ボタン -->
      <div>
      <%= f.submit t('defaults.update'), class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition duration-300" %>
      </div>

    <% end %>
  </div>
</div>
