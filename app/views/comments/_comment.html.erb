<tr id="comment-<%= comment.id %>" class="border-b">
  <td class="w-[60px] align-top py-3">
    <%= image_tag "one_smile.png", width: "50", height: "50", class: "rounded-full" %>
  </td>
  <td class="align-top py-3 pr-4">
    <h3 class="text-sm font-semibold text-gray-800"><%= comment.user.decorate.full_name %></h3>
    <p class="text-gray-700 whitespace-pre-line"><%= simple_format(comment.body) %></p>
  </td>
  <% if current_user.own?(comment) %>
    <td class="align-top py-3 text-right">
      <div class="flex justify-end space-x-2">
        <%= link_to "#", class: "edit-comment-link text-blue-600 hover:text-blue-800" do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
        <%= link_to "#", class: "delete-comment-link text-red-600 hover:text-red-800" do %>
          <i class="bi bi-trash-fill"></i>
        <% end %>
      </div>
    </td>
  <% end %>
</tr>
