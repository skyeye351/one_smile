<div class="w-full lg:w-1/3 mb-3">
  <div id="board-id-<%= board.id %>">
    <div class="bg-white rounded shadow overflow-hidden">
      <%= image_tag "board_placeholder.png", class: "w-full h-[200px] object-cover" %>
      <div class="p-4">
        <div class="flex items-start justify-between">
          <h4 class="text-lg font-semibold">
            <%= link_to board.title, '#' %>
          </h4>
          <div class="flex space-x-2 text-gray-600">
            <%= link_to '#', id: "button-edit-#{board.id}", class: "hover:text-blue-500" do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
            <%= link_to '#', id: "button-delete-#{board.id}", method: :delete, data: { confirm: '' }, class: "hover:text-red-500" do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          </div>
        </div>
        <ul class="text-sm text-gray-600 mt-2 space-y-1">
          <li><i class="bi bi-calendar"></i> <%= l board.created_at, format: :short %></li>
        </ul>
        <p class="mt-3 text-gray-800">本文</p>
      </div>
    </div>
  </div>
</div>
