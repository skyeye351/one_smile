.div.p-2
  = link_to board_path(board), class: "block bg-white rounded-xl shadow-md hover:shadow-lg transition overflow-hidden flex flex-col h-full", id: "board-id-#{board.id}" do
    - if board.board_image.attached?
      = image_tag url_for(board.board_image), class: "w-full h-48 object-cover", width: "300", height: "200"
    - else
      = image_tag "/no_image.png", class: "w-full h-48 object-cover", width: "300", height: "200"

    .p-4.flex.flex-col.flex-grow
      .flex.flex-col.gap-2.mb-2
        h4.text-lg.font-semibold.text-gray-800 = board.title
        p.text-gray-600.text-sm = truncate(board.body, length: 50)
